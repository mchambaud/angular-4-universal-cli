{
  "basePath": "../../",
  "frameworks": ["jasmine", "@angular/cli"],
  "client":{
    "clearContext": false
  },
  "files": [
    { "pattern": "./src/test.ts", "watched": false }
  ],
  "preprocessors": {
    "./src/test.ts": ["@angular/cli"]
  },
  "mime": {
    "text/x-typescript": ["ts","tsx"]
  },
  "angularCli": {
    "environment": "dev"
  },
  "port": 9876,
  "colors": true,
  "autoWatch": false,
  "browsers": ["Chrome"],
  "singleRun": true
}
