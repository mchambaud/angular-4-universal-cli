root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2

[*.nvmrc]
insert_final_newline = false

[*.sh]
insert_final_newline = false

[*.html]
insert_final_newline = false
